<div class='form_wrap'>
  <h2>Edit your post</h2>
  <%= simple_form_for @gram, method: :patch do |f| %>
    <div class="form-inputs">
      <%= f.input :message %>
      <%= f.input :photo %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, 'Save Changes', class: 'cta' %>
      <%= link_to "Cancel", :back, class: "btn btn_secondary" %>
    </div>
  <% end %>
</div>
