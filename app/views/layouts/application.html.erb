<!DOCTYPE html>
<html>
  <head>
    <title>Grammable</title>
    <%= csrf_meta_tags %>
    <link href="https://fonts.googleapis.com/css?family=Lobster" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class='primary_navigation_wrap'>
      <div class='primary_navigation'>
        <%= link_to 'Grammable', root_path, class: 'logo' %>
        <% if current_user %>
          <p class='signed_in_as'>
            You are signed in as <%= current_user.email %>
          </p>
        <% end %>
        <nav>
          <% if current_user %>
            <%= link_to 'Logout', destroy_user_session_path, method: :delete %>
            <%= link_to 'New Post', new_gram_path %>
          <% else %>
            <%= link_to 'Login', new_user_session_path %>
            <%= link_to 'Sign Up', new_user_registration_path %>
          <% end %>
        </nav>
      </div>
    </div>

    <div class='site_notifications wrap section_margin'>
      <% if notice.present? %>
        <p class="notice"><%= notice %></p>
      <% end %>

      <% if alert.present? %>
        <p class="alert"><%= alert %></p>
      <% end %>
    </div>
    <div class='wrap'>
      <%= yield %>
    </div>
  </body>
</html>
